---
import HeroImage from "@/components/HeroImage.astro";
import HeroPresentation from "@/components/HeroPresentation.astro";
import Main from "@/components/Main.astro";
import RootLayout from "@/layouts/RootLayout.astro";
---

<RootLayout title="Inicio">
  <Main
    classname="flex flex-col items-center justify-center min-h-[calc(100dvh-8rem)] pb-10 lg:pb-0 sm:pr-0 lg:pr-0 pr-0"
  >
    <div
      class="flex flex-col lg:flex-row items-center w-full lg:justify-between gap-y-20"
    >
      <HeroPresentation />
      <HeroImage />
    </div>
  </Main>
</RootLayout>

---
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { as: Element = "div", ...rest } = Astro.props;
---

<Element
  {...rest}
  class:list={[
    "max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 xl:px-0 w-full",
    rest.class,
    rest["class:list"],
  ]}
>
  <slot />
</Element>

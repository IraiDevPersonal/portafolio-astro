---
import type { HTMLAttributes } from "astro/types";

type Props = {} & HTMLAttributes<"textarea">;

const { ...props } = Astro.props;
---

<textarea
  class:list={[
    "rounded-xl min-h-44 bg-background-foreground/5 hover:bg-background-foreground/10 p-3 focus:outline-none focus:ring-2 focus:ring-primary placeholder:text-muted hover:placeholder:text-muted-foreground placeholder:font-light transition-all resize-none placeholder:transition-colors",
    props.class,
  ]}
  {...props}></textarea>

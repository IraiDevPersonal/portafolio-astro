---
import type { Polymorphic } from "astro/types";

type HeadingTag = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

type Props<Tag extends HeadingTag = "h2"> = Polymorphic<{ as: Tag }>;

const { as: Tag = "h2", class: classname, ...props } = Astro.props;
---

<Tag
  {...props}
  class:list={[
    "relative font-extrabold leading-tight uppercase bg-linear-to-l from-primary-800 to-primary-500 bg-clip-text text-transparent",
    classname,
  ]}
>
  <slot />
</Tag>

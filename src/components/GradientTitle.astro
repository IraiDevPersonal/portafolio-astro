---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"h2">;

const { class: classname, ...props } = Astro.props;
---

<h2
  {...props}
  class:list={[
    "relative font-extrabold leading-tight uppercase bg-linear-to-l from-primary-800 to-primary-500 bg-clip-text text-transparent",
    classname,
  ]}
>
  <slot />
</h2>
